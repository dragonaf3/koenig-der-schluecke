<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/aktuellerSpieler"
        android:layout_width="286dp"
        android:layout_height="92dp"
        android:layout_marginTop="5dp"
        android:contentDescription="@string/aktuelle_spieler_in"
        android:text="Platzhalter_aktueller_Spieler"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/koenigeBereitsGezogen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amZug"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/gezogeneKoenigeTextNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/nummer_welche_die_gezogenen_koenige_darstellt"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/kartenStapelView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/koenigeBereitsGezogen"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/koenigeBereitsGezogen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bereits_gezogene_koenige"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/gezogeneKoenigeTextNumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aktuellerSpieler" />

    <com.example.koenigderschluecke.view.spiel.KartenStapelView
        android:id="@+id/kartenStapelView"
        android:layout_width="382dp"
        android:layout_height="356dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonKarteZiehen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gezogeneKoenigeTextNumber" />

    <TextView
        android:id="@+id/amZug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:contentDescription="@string/gerade_am_zug"
        android:text="@string/gerade_am_zug"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/aktuellerSpieler"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonKarteZiehen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/grau_button_hintergrund"
        android:contentDescription="@string/karte_ziehen"
        android:text="@string/karte_ziehen"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kartenStapelView" />


</androidx.constraintlayout.widget.ConstraintLayout>
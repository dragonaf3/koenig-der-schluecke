<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Erlaubnis für die Kameranutzung -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/bier_icon_and_roundicon_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/bier_icon_and_roundicon_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.KönigDerSchlückeOhneBox"
        tools:targetApi="31">

        <activity
            android:name=".Startbildschirm"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".spiel.Hauptspiel">
        </activity>

        <activity
            android:name=".SpielBeitreten">
        </activity>

        <activity
            android:name=".Statistik">
        </activity>

        <activity
            android:name=".Einstellungen">
        </activity>

        <activity
            android:name=".Feedback">
        </activity>

    </application>

</manifest>